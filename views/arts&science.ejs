        window.location.href = "https://www.drngpasc.ac.in/";
    }
    let input_value = document.getElementById("user-input");
    let btn = document.getElementById("search");
    btn.addEventListener("click", search, false);

    function search(){
        let card = document.querySelectorAll(".college");
        card.forEach((element)=> {
            console.log(element);
            let name = element.querySelector(".name");
            const isVisible = name.textContent.toLowerCase().includes(input_value.value.toLowerCase());
            if(!isVisible){
                element.classList.add("hide");
            }
            else{
                element.classList.remove("hide");
                
            }
        })
    }
    
