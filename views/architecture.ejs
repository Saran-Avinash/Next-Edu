        }
        
        .colleges-container {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
        }
        
        .college {
            background-color: #ffffff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-bottom: 20px;
            height: 200px;
            flex-basis: calc(30% - 20px);
            transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
            cursor: pointer;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }
        
        .college:hover {
            transform: scale(1.05);
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
        }
        
        .college h2 {
            font-size: 20px;
            margin: 0 0 10px;
        }
        
        .college p {
            margin: 5px 0;
        }
        
        .college img {
            width: 100%;
            height: auto;
            border-radius: 5px;
            margin-bottom: 10px;
        }

        .hide{
            display:none;
        }
    </style>
</head>
